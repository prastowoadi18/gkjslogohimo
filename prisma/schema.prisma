generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Berita {
  id          String   @id @default(uuid())
  slug        String   @unique
  title       String
  description String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("berita")
}

model Majelis {
  id        String   @id @default(uuid())
  slug      String   @unique
  nama      String
  bidang    String
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("majelis")
}
